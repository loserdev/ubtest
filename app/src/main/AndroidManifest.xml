<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.kft.mfs">

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
        <activity
          android:name="com.kft.mfs.SplashActivity"
          android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.kft.mfs.MainActivity"
            android:launchMode="singleInstance">

        </activity>
        <activity android:name="com.kft.mfs.AddAccountActivity"
            android:launchMode="singleInstance"/>
        <activity
          android:label="@string/title_activity_report"
          android:name="com.kft.mfs.ReportActivity"
            android:launchMode="singleInstance"/>
        <activity
          android:label="@string/title_activity_report_pie"
          android:name="com.kft.mfs.ReportPiePolyActivity"
            android:launchMode="singleInstance"/>
        <activity android:name="com.kft.mfs.ScannerActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name="com.kft.mfs.MyQrActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name="com.kft.mfs.TransactionLogActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name="com.kft.mfs.LoginActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name="com.kft.mfs.RegistrationActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name="com.kft.mfs.AccountVerificationActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name="com.kft.mfs.TermsAndConditionsActivity"
            android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>