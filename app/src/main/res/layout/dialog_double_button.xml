<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp">

    <TextView
        android:id="@+id/double_button_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/double_button_dialog_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/double_button_dialog_title_tv"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/double_button_dialog_message_tv"
        android:padding="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/double_button_dialog_negative_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            />

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/double_button_dialog_positive_btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button.Colored"
            android:elevation="2dp"/>
    </LinearLayout>
</RelativeLayout>